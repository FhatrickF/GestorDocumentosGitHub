
@{
    ViewBag.Title = "Lista de usuarios";
}

<script>
    function edit(id) {
        $('#ModalUser').modal();
    }

</script>

<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
</section>
<section class="content">
    <div class="box">
        <div class="box-header">
            <div class="col-md-12">
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Rol</th>
                            <th>User Name</th>
                            <th>Acciones</th>
                        </tr>

                        @foreach (var item in ViewBag.lista)
                        {
                            <tr>
                                <th>@item.Email</th>
                                <th>@item.Rol</th>
                                <th>@item.UserName</th>
                                <th>
                                    <a class="blue darken-2 text-white btn-table-action z-depth-1-half waves-effect waves-light mr-2" onclick="javascript:edit(@item.Id)" type="button" role="button"><i class="fa fa-pencil"></i></a>
                                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                    <a class="red darken-2 text-white btn-table-action z-depth-1-half waves-effect waves-light" onclick="javascript:delete(@item.Id)" type="button" role="button"><i class="fa fa-trash"></i></a>
                                </th>
                            </tr>
                        }



                    </thead>
                </table>
            </div>
            <div class="col-md-12">
                <div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
                    <a class="btn-floating btn-lg blue" data-toggle="modal" data-target="#ModalUser"  id="btnNuevo">
                        <i class="fa fa-plus"></i>
                        Agregar nuevo usuario
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="ModalUser" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Usuario</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-6 col-xs-12">
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix">
                                    <i class="icon-calendar"></i>
                                    <h3 class="panel-title">Crear Usuario</h3>
                                </div>

                                <div class="panel-body">
                                    <form class="form-horizontal row-border" action="#">
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">User Name</label>
                                            <div class="col-md-10">
                                                <input type="text" name="regular" class="form-control">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">Password</label>
                                            <div class="col-md-10">
                                                <input class="form-control" type="password" name="pass">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-2 control-label">Rol</label>
                                            <div class="col-md-10">
                                                <input class="form-control" type="text" name="rol">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

</section>

